             x:Class="uploadPDFBooK.LoginPage"
             Title="تسجيل الدخول">

    <StackLayout Padding="20" VerticalOptions="Center">
       
            <Entry x:Name="UsernameEntry" Placeholder="اسم المستخدم" />
